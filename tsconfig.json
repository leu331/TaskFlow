    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2024"],

        "paths": {
            "@/*": ["./src/*"]
        },

        "module": "Node16",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,

        "strict": true,
        "skipLibCheck": true
    }
}